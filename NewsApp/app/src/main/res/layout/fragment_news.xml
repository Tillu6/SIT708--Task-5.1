<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp">

    <TextView
        android:id="@+id/tv_top_stories_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/top_stories_label"
        style="?attr/textAppearanceHeadline6"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_top_stories"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:contentDescription="@string/top_stories_list_desc"
        android:importantForAccessibility="yes"/>

    <TextView
        android:id="@+id/tv_news_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/news_label"
        style="?attr/textAppearanceHeadline6"
        android:layout_marginTop="16dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_news"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:contentDescription="@string/news_list_desc"
        android:importantForAccessibility="yes"/>
</LinearLayout>
